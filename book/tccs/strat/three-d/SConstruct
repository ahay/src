Flow('slowreal1','wpick','lineiko what=s')
Result('slowreal1',cubeplot('','allpos=y','color=j')) 
        

Flow('t0real1','slowreal1','eikonal vel=n plane3=y plane2=y zshot=%g' % (925-pad*12.5))

#Result('t0real1',dipplot('T0','allpos=y','color=j'))
