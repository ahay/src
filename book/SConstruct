nonreproducible = '''
geo391/hw2/sorting
rsf/bash/mpi
rsf/bash/plot
rsf/rsf/plplot
rsf/programming/cube
rsf/school2012/plot
rsf/school2015/matlab
rsf/tutorials/colormaps
slim/geo2008NewInsightsPareto/geop
slim/geo2008NewInsightsPareto/pareto
slim/slimUserManual/sffdct
tccs/diffr/chan3d
tccs/diffr/gom
