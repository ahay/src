from rsf.proj import *

SConscript('../fetch/SConstruct')

Flow('headerattr.txt','../fetch/SEG14.Pisoelastic_hdr.rsf',
     'sfheaderattr > $TARGET && /bin/cat $TARGET',stdout=-1)

