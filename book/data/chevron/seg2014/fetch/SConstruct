# near trace gather
Flow(['ntg.rsf','ntg_hdr.rsf'],['SEG14.Pisoelastic.rsf','SEG14.Pisoelastic_hdr.rsf'],
     '''
     sftahsort \
          input=${SOURCES[0]} \
	  sort="sx offset:0,0" \
	  verbose=1 \
     | sftahwrite \
          output=${TARGETS[0]} \
          label2="sx" o2=10000000 n2=1250 d2=250000 \
	  verbose=1
     ''',stdout=0, stdin=0)
       
Result('ntg',"sfgrey title='near trace gather'")

       
End()
