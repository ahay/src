from rsfproj import *
import stack

Fetch('midpts.hh','midpts')
Flow('bei','midpts.hh','dd form=native | put d2=0.067 o2=0.132')

stack.stack('bei',
            v0=1.4,
            nv=48,
            dv=0.025,
            x0=7.705,
            dx=0.0335,
            nx=250,
            nt=751,
            padx=521,
            rect1=40,
            rect2=10,
            srect1=1,
            srect2=5,
            vslope=0.67, 
            vx0=1.5,     
            tmax=3.996,
            f1=15,
            an=2,
            nout=2048)

panels = []
for cig in (41,83,110,137,165):
    panel = 'cig%d' % cig
    panels.append(panel)

    Plot(panel+'g','bei-foc',
         '''
         window min1=1 max1=4 n3=1 f3=%d | grey allpos=y
         label1=Time unit1=s label2=Velocity unit2=km/s
         labelsz=15 titlesz=18 color=j bias=3 title="IG at %d km"
         ''' % (cig,int(7.705+0.0335*cig)))

    pik = 'pik%d' % cig
    Plot(pik,'bei-pik',
         '''
         window min1=1 max1=4 n2=1 f2=%d |
         graph transp=y yreverse=y pad=n
         wanttitle=n labelsz=15 titlesz=18 wantaxis=n
         min2=1.425 max2=2.6 plotcol=7 plotfat=10
         ''' % cig)

    Plot(panel,[panel+'g',pik],'Overlay')
    

Result('panel',panels,'SideBySideAniso',vppen='txscale=1.2')

Flow('pwk','bei-dip',
     'remap1 n1=1500 | pwpick i0=125 eps=0.05 | window n1=1000')
Plot('pwk',
     '''
     contour c0=0 dc=0.16 nc=25
     transp=y yreverse=y plotcol=6 plotfat=5
     wanttitle=n wantaxis=n
     ''')

Plot('bei-stk2',
     '''
     grey title="Stack" 
     label1=Time unit1=s label2=Lateral unit2=km
     ''')

Result('pwk','bei-stk2 pwk','Overlay')

End()
