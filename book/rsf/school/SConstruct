from rsf.tex import *

# Paul's slides
for slides in glob.glob('slides???.tex'):
    slidesname = os.path.splitext(slides)[0]
    Paper(slidesname,
          lclass='cwpslides',
          use='multicol,color,overpic,listings,amsmath,amssymb,amsbsy,framed',
          color='ALL')
    
